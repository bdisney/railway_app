

<%= form_for(@train) do |f| %>
  <%= render 'shared/errors_messages', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <br />

  <%= f.select :current_station_id, RailwayStation.all.map{ |station| [ "#{station.title}", station.id ] }, {prompt: "Select station"}, class: "mdb-select colorful-select dropdown-info" %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  // Material Select Initialization
  $(document).ready(function() {
    $('.mdb-select').material_select();
  });
</script>



