<div class="divider-new">
    <h2 class="h2-responsive">
        <%= t('.title') %><strong> <span class="text-muted"></span></strong>
    </h2>
</div>



<div class="card">
    <h3 class="card-header primary-color white-text"><i class="fa fa-ticket" aria-hidden="true"></i> <%= t('.title') %>:</h3>
    <% if current_user.tickets.present? %>
    <div class="card-block">
        <table class="table text-center">
            <thead class="">
                <tr>
                    <th class="text-center"><%= t('tickets.attributes.sn') %></th>
                    <th class="text-center"><%= t('tickets.attributes.train') %></th>
                    <th class="text-center"><%= t('tickets.attributes.route') %></th>
                    <th class="text-center"><%= t('tickets.attributes.start_station') %></th>
                    <th class="text-center"><%= t('tickets.attributes.end_station') %></th>
                    <th colspan="2" class="text-center"><%= t('shared.actions') %></th>
                </tr>
            </thead>

            <tbody>
                <%= render @tickets %>
            </tbody>
        </table>
    </div>
    <% else %>
        <p class=""><h3><span class="text-muted flex-center"><%= t('.no_record') %></span></h3></p>
    <% end %>
</div>


<br/>

<%= link_to 'Back', root_path, class: "text-danger" %>