<%= render 'shared/errors_messages', resource: @ticket %>

<h1><%= t('.title') %></h1>

<h2>Information:</h2>
<table class="table  table-hover">
  <tbody>
  <tr>
    <th>Train Number:</th>
    <td><%= @ticket.train.number %></td>
  </tr>
  <tr>
    <th>Route:</th>
    <td><%= @ticket.train.route.name %></td>
  </tr>
  <tr>
    <th>Departing:</th>
    <td><%= @ticket.start_station.title %></td>
  </tr>
  <tr>
    <th>Destination:</th>
    <td><%= @ticket.end_station.title %></td>
  </tr>
  </tbody>
</table>

<h2>Passenger details:</h2>
<div>
  <%= form_for(@ticket) do |f| %>
      <%= f.hidden_field :train_id %>
      <%= f.hidden_field :start_station_id %>
      <%= f.hidden_field :end_station_id %>

      <div class="field">
        <%= f.label :passenger_name %>
        <%= f.text_field :passenger_name %>
      </div>

      <div class="field">
        <%= f.label :passport_number %>
        <%= f.text_field :passport_number %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
  <% end%>
</div>