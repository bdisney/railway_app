<div class="col-sm-3 col-md-3">
                  <br />
                  <div class="card card-cascade narrower">
                      <div class="admin-panel">
                          <div class="view form-header blue lighten-2">
                              <h5 class="text-center">Resources</h5>
                          </div>
                          <!--Card content-->
                          <div class="card-block">
                              <div class="list-group">
                                  <ul class="list-group">
                                      <li class="list-group-item list-group-item-action">
                                          <%= link_to (admin_routes_path ) do %>
                                              <span><i class="fa fa-road"></i> <%= t('.routes') %></span>

                                          <% end %>
                                      </li>
                                      <li class="list-group-item list-group-item-action">
                                          <%= link_to (admin_railway_stations_path) do %>
                                              <span><i class="fa fa-bank"></i> <%= t('.railway_stations') %></span>
                                          <% end %>
                                      </li>
                                      <li class="list-group-item list-group-item-action">
                                          <%= link_to (admin_trains_path) do %>
                                              <span><i class="fa fa-train ml-auto" data-toggle="tooltip" data-placement="top" title="" data-original-title="Click to fix"></i> <%= t('.trains') %></span>
                                          <% end %>
                                      </li>
                                      <li class="list-group-item list-group-item-action">
                                          <%= link_to (admin_tickets_path) do %>
                                              <span><i class="fa fa-ticket"></i> <%= t('.tickets') %></span>
                                          <% end %>
                                      </li>
                                  </ul>
                              </div>
                          </div>
                          <!--/.Card content-->
                      </div>
                  </div>

              </div>