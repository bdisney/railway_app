<%= render 'shared/errors_messages', resource: @train %>

<%= form_for [:admin, @train] do |f| %>
    <div class="card">
        <h3 class="card-header primary-color white-text"><i class="fa fa-subway" aria-hidden="true"></i> <%= t('.submit', action: @train.new_record? ? 'Создать' : 'Изменить') %>:</h3>
        <div class="card-block">

            <div class="row">
                <div class="col-md-6">  
                    <h4 class="card-title"><%= t('admin.trains.attributes.number') %>:</h4>
                    <div class="form-group">
                        <%= f.text_field :number %>
                    </div>
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h4 class="card-title"><%= t('admin.trains.attributes.current_station') %>:</h4>
                    <%= f.select :current_station_id, RailwayStation.all.map{ |station| [ "#{station.title}", station.id ] }, {}, class: "mdb-select colorful-select" %>
                </div>
                <div class="col-md-6">
                <h4 class="card-title"><%= t('admin.trains.attributes.route') %>:</h4>
                    <%= f.select :route_id, Route.all.map{ |route| [ "#{route.name}", route.id ] }, {}, class: "mdb-select colorful-select" %>
                </div>
            </div>
            <br />
            <div class="form-group">
                <%= f.check_box :order_from_tail %>
                <%= f.label :order_from_tail %>
            </div>
            <div class="actions">
                <button type="submit" class="btn btn-primary"><%= t('.submit', action: @train.new_record? ? 'Создать' : 'Изменить') %></button>
            </div>
        </div>
    </div>
<% end %>