<%= form_for [@train, carriage.becomes(Carriage)] do |f| %>
    <%= render 'shared/errors_messages', resource: @carriage %>

    <% f.object = @carriage.becomes(@carriage.class) %>

    <div class="field">
      
      <%= f.select :type, Carriage.types, {prompt: "Select type"}, {class: "mdb-select colorful-select dropdown-warning" } %>
    </div>
  
      
    <%= f.text_field :top_seats %>
    <%= f.label :top_seats %>
      
    <%= f.text_field :bottom_seats %>
    <%= f.label :bottom_seats %>

    <%= f.text_field :side_top_seats %>
    <%= f.label :side_top_seats %>

    <%= f.text_field :side_bottom_seats %>
    <%= f.label :side_bottom_seats %>
      
    <%= f.text_field :seats %>
    <%= f.label :seats %>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>