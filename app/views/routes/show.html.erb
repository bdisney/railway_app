<p id="notice"><%= notice %></p>

<h4>Route</h4>
<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Railway stations:</strong>
  <%= render 'shared/resource_list', resource_list: @route.railway_stations, attr: :title, empty_text: 'There no stations in route' %>
</p>

<p>
  <strong>List of trains on route:</strong>
  <%= render 'shared/resource_list', resource_list: @route.trains, attr: :number, empty_text: 'There no trains on route' %>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>