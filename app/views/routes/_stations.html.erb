<table>
  <thead>
    <tr>
      <th>Station</th>
      <th>Position</th>
    </tr>
  </thead>
  <tbody>
    <% stations.each do |station| %>
      <tr>
        <td><%= link_to station.title, station %></td>
        <td>
          <%= form_tag(update_station_place_in_route_railway_station_path(station), method: :patch) do %>
          <%= hidden_field_tag :route_id, @route.id %>
              
          <%= number_field_tag :position, station.position_in(@route) %>
          <td><%= submit_tag 'Reorder' %></td>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 


<!-- Horizontal Steppers -->
<div class="row">
    <div class="col-md-12">
        <!-- Stepers Wrapper -->
        <ul class="stepper stepper-horizontal">
        <% stations.each do |station| %>
        <li class="completed">
        <a href="<%= railway_station_path(station) %>">
                    <span class="circle" ><%= station.position_in(@route) %></span>
                    <span class="label"><%=  station.title %></span>
                </a>
            </li>
            <% end %>
        </ul>
        <!-- /.Stepers Wrapper -->
    </div>
</div>
<!-- /.Horizontal Steppers -->






